{
  "include": [
    "*.d.ts",
    "*.ts",
    "./pages/**/*",
    "./configs/**/*",
    "./components/**/*",
    "./inertnal/**/*",
  ],
  "exclude": [
    "node_modules",
    ".webpack"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "jsxFactory": "h",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true, /* Enable all strict type-checking options. */
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015.promise"
    ],
    "sourceMap": true,
    "pretty": true,
    "baseUrl": "./"
  }
}